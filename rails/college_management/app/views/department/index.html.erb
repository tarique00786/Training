<h1>Department Details</h1>
<table>
  <thead>
	<tr>
	  <th>Name</th>
	  <th>Total Student</th>
	  <th>Location </th>
	  <th>Action</th>
	</tr>
  </thead>
  <tbody>
  	<% @departments.each do |department| %>
	<tr>
	  <td><%= department.name %></td>
	  
	  <td><%= department.location %></td>
	  <td><%= link_to "Delete","/delete_department/#{department.id}", method: :delete %><br /></td>
	</tr>
	<% end %> 
  </tbody>
</table> 
