<div class = 'search-area'>
  <h3>Search Department</h3>
  <%= form_tag search_department_path,remote: true, method: :get do %>
    <div class = "form-group row">
      <div class = "col-sm-9">
        <%= text_field_tag :department, params[:department], placeholder: "Search Department" , autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class = "col-sm-3">
        <%= button_tag type: :submit, class: "btn-btn-success" do %>
          <%= "Search" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id = "results">
  
</div>

